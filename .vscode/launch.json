{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch & Profile built-in server",
            "type": "php",
            "request": "launch",
            "noDebug": true,
            "profile": true,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch built-in server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/.",
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch built-in server and Profile",
            "type": "php",
            "request": "launch",
            "noDebug": true,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/.",
            "serverReadyAction": {
                "action": "openExternally"
            },
            "profile": true,
            "openProfile": true
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch"
        }
    ]
}